<% form_for :debater, :url => { :controller => :debater, :action => :do_login } do |form| %>
    <center>
        <table>
            <tr>
                <td colspan="2"><b><center>LOGON</center></b></td>
            </tr>
            <% if @message != nil %>
                <tr>
                    <td colspan="2"><font color=red><%= @message %></font></td>
                </tr>
            <% end %>
                <td>Email:</td>
                <td><%= form.text_field(:email) %></td>
            </tr>
            <tr>
                <td>Password:</td>
                <td><%= form.password_field(:password) %></td>
            </tr>
            <tr>
                <td colspan="2"><center><%= form.submit("Login") %></center></td>
            </tr>
        </table>
    </center>
<% end %>
