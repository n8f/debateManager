<% form_for :debater, :url => { :action => :add_debater } do |form| %>
    <center>
        <table>
            <tr>
                <td colspan="2"><center><em>ADD DEBATER</em></center></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><%= form.text_field(:email) %></td>
            </tr>

            <tr>
                <td>Name</td>
                <td><%= form.text_field(:name) %></td>
            </tr>

            <tr>
                <td>Pasword</td>
                <td><%= form.text_field(:password) %></td>
            </tr>
            <tr>
                <td colspan="2">
                    <center>
                        <%= form.submit("Add Debater") %>
                    </center>
                </td>
            </tr>
        </table>
    </center>
<% end %>
